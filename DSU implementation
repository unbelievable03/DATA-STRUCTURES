#define         N                   5000005
int parent[N],size[N];
/*void make_set(int v) {
    parent[v] = v;
    size[v] = 1;
}*/
int find_parent(int v){
    if(v==parent[v]){
        return v;
    }
    return parent[v]=find_parent(parent[v]);
}
void union_sets(int a, int b) {
    a = find_parent(a);
    b = find_parent(b);
    if (a != b) {
        if (size[a] >= size[b]){
            swap(a, b);
        }
        size[b] += size[a];
        parent[a] = b;
    }
}
